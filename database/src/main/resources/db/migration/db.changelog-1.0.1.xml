<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
						http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="add language: user information" author="mbocek">
		<addColumn tableName="USER_INFORMATION">
			<column name="LANGUAGE" type="varchar(10)" />
		</addColumn>
	</changeSet>
	
	<changeSet id="default values for language: user information" author="mbocek">
		<sql>UPDATE user_information SET language = 'en' WHERE language IS NULL</sql>
	</changeSet>
	
	<changeSet id="mark language as not null: user information" author="mbocek">
		<addNotNullConstraint  tableName="USER_INFORMATION" columnName="LANGUAGE" />
	</changeSet>
	
</databaseChangeLog>
